@model services.Models.ViewModels.BaseLayoutModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Title🤯</title>
    <link href="~/css/layout/base.css" rel="stylesheet" />
    @RenderSection(name: "Styles", required: false)
</head>
<body>

    <header>
        <div class="container">

            <p class="title"><b>rtxdiv</b> prod.</p>

            @if (Model.Layout.ShowRequests == true) {

                <div class="requests" onclick="window.location.href='/requests'">
                    <div class="button">Мои заказы</div>
                    @if (Model.Layout.ShowNotification == true) {
                        <div class="notification">UPD</div>
                    }
                </div>
            }

        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection(name: "Scripts", required: false)

</body>
</html>